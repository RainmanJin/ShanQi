<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true"
        android:background="@color/colorHead"
        android:orientation="horizontal">

        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/layoutLeft"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="16dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/main_button_left"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tvHeadTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="闪骑"
            android:textColor="@color/colorText_black"
            android:textSize="@dimen/TextSize_18"/>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.hztuen.shanqi.widget.CustomTextView
            android:id="@+id/tvMoney"
            android:maxLength="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/_0_0"
            android:textColor="@color/colorText_red"
            android:textSize="@dimen/TextSize_65"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="当前费用（元）"
            android:textColor="@color/colorText_gray_2"
            android:textSize="@dimen/TextSize_14"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.hztuen.shanqi.widget.CustomTextView
                    android:maxLength="4"
                    android:id="@+id/tvTime"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:background="@mipmap/c5_circle"
                    android:gravity="center"
                    android:text="@string/_0_0"
                    android:textColor="@color/colorText_red"
                    android:textSize="@dimen/TextSize_25"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/run_time"
                    android:textColor="@color/colorText_gray_2"
                    android:textSize="@dimen/TextSize_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.hztuen.shanqi.widget.CustomTextView
                    android:maxLength="4"
                    android:id="@+id/tvMileage"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:background="@mipmap/c5_circle"
                    android:gravity="center"
                    android:text="@string/_0_0"
                    android:textColor="@color/colorText_red"
                    android:textSize="@dimen/TextSize_25"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/run_distance"
                    android:textColor="@color/colorText_gray_2"
                    android:textSize="@dimen/TextSize_14"/>
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="锁车状态正常计费"
        android:textColor="@color/colorText_red"
        android:textSize="@dimen/TextSize_14"

        />

    <Button
        android:id="@+id/btReturn01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_height_40"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/register_activity_login3"
        android:text="@string/temporary_car"
        android:textColor="@color/colorText_red"
        android:textSize="@dimen/TextSize_16"/>

    <Button
        android:id="@+id/btReturn02"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_height_40"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/register_activity_login2"
        android:text="@string/return_my_car"
        android:textColor="@color/colorText_white"
        android:textSize="@dimen/TextSize_16"/>


</LinearLayout>